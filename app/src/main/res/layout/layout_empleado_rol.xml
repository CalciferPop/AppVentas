<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="118dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:src="@drawable/cliente" />


            <TextView
                android:id="@+id/txtNombEmplEMPROLStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_marginTop="22dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="Nombre Empleado:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/txtNombEmplEMPROL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@+id/txtNicknameEMPROL"
                android:layout_alignTop="@+id/txtNombEmplEMPROLStatic"
                android:text="Nombre Empleado :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


            <TextView
                android:id="@+id/txtApePatEMPROLStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnUpdateEmpleadoRol"
                android:layout_toEndOf="@+id/imageView"
                android:text="Apellido Paterno :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/txtApePatEMPROL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtNombEmplEMPROL"

                android:layout_below="@+id/btnUpdateEmpleadoRol"
                android:text="Apellido Paterno :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtApeMatEMPROLStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_above="@+id/btnDeleteEmpleadoRol"
                android:layout_toEndOf="@+id/imageView"
                android:text="Apellido Materno :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/txtApeMatEMPROL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnDeleteEmpleadoRol"
                android:layout_alignStart="@+id/txtNombEmplEMPROL"
                android:text="Apellido Materno :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


            <TextView
                android:id="@+id/txtNicknameEMPROLStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="Nickname :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txtNicknameEMPROL"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/txtNicknameEMPROLStatic"
                android:layout_marginStart="222dp"
                android:text="Nickname :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtRolEMPROL"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="107dp"
                android:text="Rol :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#df0c0c" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnUpdateEmpleadoRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginEnd="12dp"
                app:backgroundTint="@android:color/holo_blue_light"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnDeleteEmpleadoRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"


                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                app:backgroundTint="@android:color/holo_red_dark"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_delete" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>