<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="15dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageViewPedidos"
                android:layout_width="120dp"
                android:layout_height="118dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:src="@drawable/pedido" />


            <TextView
                android:id="@+id/txtIdPedidoStactic"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageViewPedidos"
                android:layout_toEndOf="@+id/imageViewPedidos"
                android:text="ID Pedido:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/txtIdPedido"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageViewPedidos"
                android:layout_toEndOf="@+id/txtIdPedidoStactic"
                android:text="ID pedido"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtNombClienteStatic"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtIdPedido"
                android:layout_toEndOf="@+id/imageViewPedidos"
                android:text="Nombre cliente :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/txtNombCliente"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtIdPedidoStactic"
                android:layout_toEndOf="@+id/txtNombClienteStatic"
                android:text="Nombre cliente :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtDomicilioStatic"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombClienteStatic"
                android:layout_toEndOf="@+id/imageViewPedidos"
                android:text="Domicilio :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/txtDomicilio"
                android:layout_width="451dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewPedidos"
                android:text="Domicilio :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtNombreProductoStatic"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtNombreProducto"
                android:layout_toEndOf="@+id/imageViewPedidos"
                android:text="Nombre Producto :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/blue_leve" />

            <TextView
                android:id="@+id/txtNombreProducto"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtCantidadStatic"
                android:layout_toEndOf="@+id/txtPrecio"
                android:text="Nombre Producto :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtCantidadStatic"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnDeletePedido"
                android:layout_toEndOf="@+id/imageViewPedidos"
                android:text="Cantidad:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/txtCantidad"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnDeletePedido"
                android:layout_toEndOf="@+id/txtDomicilioStatic"
                android:text="cantidad:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewPedidos"
                android:layout_toEndOf="@+id/txtDomicilioStatic"
                android:text="Precio $:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtPrecioStatic"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewPedidos"
                android:layout_toEndOf="@+id/imageViewPedidos"
                android:text="Precio $:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/txtImporteStatic"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtNombreProducto"
                android:layout_below="@+id/txtNombreProductoStatic"
                android:text="Importe $:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/txtImporte"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@+id/imageViewPedidos"
                android:layout_alignStart="@+id/txtImporteStatic"
                android:text="Importe $:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnDeletePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                app:backgroundTint="@android:color/holo_red_dark"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_delete" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>