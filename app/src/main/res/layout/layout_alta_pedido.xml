<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageViewAltaPed"
                android:layout_width="120dp"
                android:layout_height="118dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:src="@drawable/producto" />

            <TextView
                android:id="@+id/txtNombProdAltaPed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageViewAltaPed"
                android:layout_toEndOf="@+id/imageViewAltaPed"
                android:text="Nombre"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtDescProdAltaPed"
                android:layout_width="161dp"
                android:layout_height="41dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/imageViewAltaPed"
                android:text="Descripcion"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtprecioStaticAltaPed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="23dp"
                android:layout_toEndOf="@+id/imageViewAltaPed"
                android:text="Precio $"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#40b6b0" />

            <TextView
                android:id="@+id/txtPrecioProdAltaPed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/txtprecioStaticAltaPed"
                android:layout_marginStart="200dp"
                android:text="Precio"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/txtNumExistenciaAltaPedStaticAltaPED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescProdAltaPed"
                android:layout_toEndOf="@+id/imageViewAltaPed"
                android:text="Existencia:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#10eadc">

            </TextView>

            <TextView
                android:id="@+id/txtNumExistenciaAltaPed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtPrecioProdAltaPed"
                android:layout_below="@+id/txtDescProdAltaPed"
                android:text="Existencia: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/dsnCantidadAltaPed"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/btnAltaPedido">

                <EditText
                    android:id="@+id/edtCantidadAltaPed"
                    android:layout_width="136dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:hint="Cantidad"
                    android:inputType="number"
                    android:textAlignment="center" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnAltaPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="26dp"
                app:backgroundTint="@color/green"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_add_shopping_cart_black_24dp"
                tools:ignore="VectorDrawableCompat" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>